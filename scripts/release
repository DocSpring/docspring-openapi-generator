#!/bin/bash
set -e
cd "$(dirname "$0")/.."

LANGUAGE="$1"

if [ -n "$LANGUAGE" ]; then
  ./scripts/release "$LANGUAGE"
  exit
fi

for f in config/*; do
  LANG="$(echo $f | sed -e "s/config\///g" -e "s/\.json//g")"
  if [ "$LANGUAGE" = "java" ]; then
    echo "Skipping $LANGUAGE for now, not implemented yet."
    continue
  fi
  echo "Releasing new version of $LANGUAGE client library..."
  ./scripts/release "$LANGUAGE"
done
